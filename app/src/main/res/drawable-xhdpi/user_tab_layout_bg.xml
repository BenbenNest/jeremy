    <!-- 上边框颜色 -->
    <item
        android:bottom="1dp"
        android:top="0dp">
        <shape>
            <solid android:color="#f2f2f2" />
        </shape>
    </item>
    <!-- 下边框颜色 -->
    <item
        android:bottom="0dp"
        android:top="1px">
        <shape>
            <solid android:color="#cecece" />
        </shape>
    </item>
    <!-- 主体背景颜色 -->
    <item
        android:bottom="0px"
        android:top="0px">
        <shape>
            <solid android:color="@color/toolbar_color" />
        </shape>
    </item>
</layer-list>