<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#d9d9d9" />
            <stroke
                android:width="1px"
                android:color="#d9d9d9" />
            <corners
                android:radius="3px" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <solid android:color="#d9d9d9" />
            <stroke
                android:width="1px"
                android:color="#d9d9d9" />
            <corners
                android:radius="3px" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/user_white_bg" />
            <stroke
                android:width="1px"
                android:color="#d9d9d9"/>
            <corners
                android:radius="3px" />
        </shape>
    </item>
</selector>