<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#d9d9d9" />
            <stroke
                android:width="1dp"
                android:color="#d9d9d9"
                android:dashWidth="5dp"
                android:dashGap="3dp" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <solid android:color="#d9d9d9" />
            <stroke
                android:width="1dp"
                android:color="#d9d9d9"
                android:dashWidth="5dp"
                android:dashGap="3dp" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/user_white_bg" />
            <stroke
                android:width="1dp"
                android:color="#d9d9d9"
                android:dashWidth="5dp"
                android:dashGap="3dp" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>