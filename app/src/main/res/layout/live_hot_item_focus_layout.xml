    <android.support.percent.PercentRelativeLayout
        android:id="@+id/player_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <com.jeremy.lychee.widget.GlideControl.GlideImageView
            android:id="@+id/live_hot_focus_item_img"
            android:background="@color/live_item_bg"
            app:layout_aspectRatio="178%"
            app:layout_widthPercent="100%" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/live_pd_icon_movie_play" />
    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_area"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text="功夫熊猫3精彩预告"
        android:textColor="#333333"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/comment_area"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/title">

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/live_pd_icon_comment"
            android:drawablePadding="4dp"
            android:paddingTop="12dp"
            android:text="43评论"
            android:textColor="#333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/live_pd_icon_share"
            android:paddingTop="12dp" />

        <!--<TextView-->
        <!--android:id="@+id/zan"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="24dp"-->
        <!--android:layout_toLeftOf="@id/share"-->
        <!--android:paddingTop="12dp"-->
        <!--android:drawableLeft="@drawable/article_icon_good_default" />-->

        <TextView
            android:id="@+id/zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/share"
            android:drawableLeft="@drawable/article_icon_good_default"
            android:drawablePadding="2dp"
            android:paddingTop="12dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#dee0e0" />

    </RelativeLayout>

</RelativeLayout>