<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainview"
    android:background="#F0F0F0">

    <include
        android:id="@+id/toolbarview"
        layout="@layout/toolbar"
        />
    <ScrollView
        android:layout_below="@id/toolbarview"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_isselected"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#F0F0F0"
                android:text="已订阅"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:layout_below="@id/action_bar_underline"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/selected_channel_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:minHeight="150dp"
                android:layout_below="@id/tv_isselected"
                />
            <TextView
                android:id="@+id/tv_unselected"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#F0F0F0"
                android:text="添加订阅"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:layout_below="@id/selected_channel_recyclerView"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/unselected_channel_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_below="@id/tv_unselected"
                />
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/live_pd_manage_mask"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
