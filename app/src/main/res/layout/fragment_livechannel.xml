<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:elevation="0dp"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_area"
            app:layout_scrollFlags="scroll|enterAlways"
            >
            <com.jeremy.lychee.widget.recyclerview.CustomRecyclerView
                android:id="@+id/coulmns_channels"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingRight="10dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                />
            <ImageView
                android:id="@+id/column_right"
                android:layout_width="36dp"
                android:layout_height="44dp"
                android:src="@drawable/live_pd_xiaobaise"
                android:layout_alignRight="@id/coulmns_channels"
                />
            <View
                android:id="@+id/action_bar_underline"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/coulmns_channels"
                android:background="@color/toolbar_divider" />
            <com.jeremy.lychee.widget.recyclerview.CustomRecyclerView
                android:id="@+id/live_channels"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_below="@id/action_bar_underline"
                android:layout_marginTop="5dp"
                android:background="@drawable/channel_item_background"
                />
            <ImageView
                android:id="@+id/channels_right"
                android:layout_width="34dp"
                android:layout_height="66dp"
                android:src="@drawable/live_pd_dabaise"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/live_channels"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:drawableRight="@drawable/live_icon_pd_more"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/live_channels"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#fff"
                android:layout_below="@id/live_channels"
                />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:id="@+id/live_channeldata_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:orientation="vertical"
            >
        </LinearLayout>
        <include
            android:id="@+id/loading_layout"
            layout="@layout/common_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <include
            android:id="@+id/error_layout"
            layout="@layout/common_error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>