<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/news_card_bg">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <com.jeremy.lychee.widget.GlideControl.GlideImageView
            android:id="@+id/img_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/news_image_default_color" />

        <com.jeremy.lychee.widget.GlideControl.GlideImageView
            android:id="@+id/img_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/news_image_default_color" />

        <com.jeremy.lychee.widget.GlideControl.GlideImageView
            android:id="@+id/img_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/news_image_default_color" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="7dp">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/line_spacing_news_title"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/news_title_font_size_level_1" />

        <ImageView
            android:id="@+id/del_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title_txt"
            android:layout_alignParentRight="true"
            android:paddingLeft="7dp"
            android:paddingRight="2dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_news_del" />
    </RelativeLayout>

</RelativeLayout>