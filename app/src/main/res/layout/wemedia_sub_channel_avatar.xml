<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clickable"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_marginBottom="@dimen/wemedia_list_item_space"
    android:gravity="top"
    android:background="@color/user_white_bg">

    <FrameLayout
        android:id="@+id/channel_avatars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"></FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/channel_avatars"
        android:layout_alignBottom="@+id/channel_avatars"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#A8A8A8"
            android:textSize="13dp"
            android:text="全部"/>
        <TextView
            android:id="@+id/sub_channel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A8A8A8"
            android:text="0"
            android:textSize="13dp"/>
        <com.jeremy.lychee.widget.ImageTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/zpd_image_more"
            app:right_width="6dp"
            app:right_height="12dp"
            android:drawablePadding="5dp"
            android:layout_marginRight="2dp"
            android:textColor="#A8A8A8"
            android:textSize="13dp"
            android:text="个"/>
    </LinearLayout>


</RelativeLayout>