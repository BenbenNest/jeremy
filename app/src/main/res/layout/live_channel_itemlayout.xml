<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:id="@+id/img_layout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:background="#d8d8d8"
        android:padding="0.5dp"
        app:layout_aspectRatio="178%">

        <com.jeremy.lychee.widget.GlideControl.GlideImageView
            android:id="@+id/video_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/how_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/video_img"
            android:layout_alignRight="@+id/video_img"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/news_type_bg"
            android:drawablePadding="4dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:drawableLeft="@mipmap/ic_video_tpye_small"
            android:textColor="#d8d8d8"
            android:textSize="11dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/row_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/img_layout"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:text="标题5"
        android:textColor="#444444"
        android:textSize="17dp" />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/row_title"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/img_layout"
        android:layout_weight="1"
        android:layout_alignLeft="@id/row_title"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/come_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="小肥羊"
            android:textColor="#b6b6b6"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:drawableLeft="@drawable/live_icon_comment"
            android:text="22"
            android:drawablePadding="2dp"
            android:textColor="#b6b6b6"
            android:textSize="12dp" />

    </LinearLayout>
</android.support.percent.PercentRelativeLayout>