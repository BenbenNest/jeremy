<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/live_channel_item_bg"
    >
    <com.jeremy.lychee.widget.GlideControl.GlideImageView
        app:layout_widthPercent="100%"
        app:layout_aspectRatio="178%"
        android:id="@+id/livenews_image"
        android:background="#DDDDDD"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/live_pd_play"
        android:layout_alignRight="@id/livenews_image"
        android:layout_alignBottom="@id/livenews_image"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"
        android:id="@+id/titleline"
        android:layout_below="@id/livenews_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:id="@+id/livenews_title"
        android:paddingTop="7dp"
        android:paddingLeft="7dp"
        android:layout_below="@id/titleline"
        android:text="这里是新闻title "
        android:layout_alignLeft="@id/titleline"
        android:layout_alignRight="@id/titleline"
        android:textColor="#333333"
        android:textSize="15dp"
        />
</android.support.percent.PercentRelativeLayout>