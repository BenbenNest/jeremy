<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/title_area"
            >
            <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:30"
                android:textSize="24dp"
                android:textColor="#333333"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/tvname"
                android:text="BTV卫视"
                android:gravity="center"
                android:layout_below="@id/video_time"
                android:textSize="11dp"
                android:layout_marginTop="7dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/one_line2"
            android:gravity="center"
            android:layout_width="1px"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/title_area"
            android:background="#E6E6E6"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/video_title"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="档案第二季24期"
            android:textSize="15dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/one_line2"
            android:layout_alignTop="@id/one_line2"
            />
       <!-- <TextView
            android:id="@+id/vedio_issub"
            android:gravity="center"
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:text=""
            android:textSize="13dp"
            android:layout_alignParentRight="true"
            android:textColor="#999999"
            android:layout_marginTop="12dp"
            />-->
        <ImageView
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:id="@+id/vedio_issub"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9"
            android:layout_alignParentBottom="true"
            android:id="@+id/underline2"
            />
    </RelativeLayout>
</RelativeLayout>