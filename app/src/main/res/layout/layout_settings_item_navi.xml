<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:foreground="@drawable/live_mine_item_bg_sl"
    android:background="@color/bottombar_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <include
        layout="@layout/layout_settings_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"/>

    <TextView
        android:id="@+id/settings_item_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/settings_arrow"
        android:drawableEnd="@drawable/settings_arrow"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333333" />

</FrameLayout>