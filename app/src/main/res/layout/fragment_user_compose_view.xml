<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NewApi">

    <com.jeremy.lychee.widget.BounceNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <RelativeLayout
                android:id="@+id/create_article"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/background_user_compose_menu"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/zpd_cz_fabu"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_toRightOf="@id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:textSize="18dp"
                    android:text="写篇文章"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/transmit_article"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/background_user_compose_menu"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/zpd_cz_heart"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_toRightOf="@id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:textSize="18dp"
                    android:text="推荐文章"/>
            </RelativeLayout>

        </LinearLayout>

    </com.jeremy.lychee.widget.BounceNestedScrollView>


</FrameLayout>