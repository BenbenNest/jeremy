<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/input_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:ems="3"
        android:singleLine="true"
        android:textColor="@color/black_text"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/input_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/input_name_tv"
        android:layout_toRightOf="@+id/input_name_tv"
        android:background="@null"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/black_text"
        android:textColorHint="@color/gray_text"
        android:textSize="16dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/input_clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_input_clear"
        android:visibility="gone" />

    <View
        android:id="@+id/input_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_input_bottom_line_color" />

</RelativeLayout>